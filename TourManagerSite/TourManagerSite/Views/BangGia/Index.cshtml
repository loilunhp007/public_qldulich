@model List<TourManager.Models.BangGia>

@{
    ViewData["Title"] = "Index";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold">BẢNG GIÁ</h6>
    </div>
    <div class="card-body">
        <form class="form-inline">
            <div class="form-group mb-2 mx-4">
                <label>Tour</label>
                <div class="col-3" id="allTour"></div>
            </div>
        </form>
        <div class="col-12 text-right">
            <a asp-controller="BangGia" asp-action="Create" class="btn btn-info">
                <i class="fas fa-plus"></i>
            </a>
        </div>

        <br />

        @if (Model.Count() > 0)
        {
            <table id="bgTable" class="table table-bordered table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Tour
                        </th>
                        <th>
                            Giá Tour
                        </th>
                        <th>
                            Thời Gian Bắt Đầu
                        </th>
                        <th>
                            Thời Gian Kết Thúc
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var bg in Model)
                    {
                        <tr>
                            <td>@bg.Tour.TenTour</td>
                            <td>@string.Format("{0:C0}", bg.GiaTour)</td>
                            <td>@bg.Tgbd.ToShortDateString()</td>
                            <td>@bg.Tgkt.ToShortDateString()</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@bg.MaGia" class="btn btn-success mx-4">
                                    <i class="far fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@bg.MaGia" class="btn btn-danger">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Rỗng</p>
        }
    </div>
</div>
