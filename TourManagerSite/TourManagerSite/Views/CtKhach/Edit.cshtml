@model TourManager.Models.CtDoan

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold">SỬA CHI TIẾT KHÁCH</h6>
    </div>
    <div class="card-body">
        <form method="post">
            <input asp-for="MaCtDoan" hidden />

            <div class="row">
                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="MaDoan">Đoàn</label>
                        </div>
                        <div class="col-8">
                            <select asp-for="MaDoan" asp-items="@(new SelectList(ViewBag.LayDoan, "MaDoan", "TenDoan"))" class="form-control">

                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="MaKhach">Khách</label>
                        </div>
                        <div class="col-8">
                            <select asp-for="MaKhach" asp-items="@(new SelectList(ViewBag.LayKhach, "MaKhach", "Ten"))" class="form-control">
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-4 row">
                            <div class="col">
                                <input type="submit" class="btn btn-success w-100" value="Sửa" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-dark w-100"><i class="fas fa-sign-out-alt"></i>Trở lại</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

