@model List<TourManager.Models.LoaiTour>

@{
    ViewData["Title"] = "Index";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold">LOẠI TOUR</h6>
    </div>
    <div class="card-body">
        <div class="col-12 text-right">
            <a asp-controller="LoaiTour" asp-action="Create" class="btn btn-info">
                <i class="fas fa-plus"></i>
            </a>
        </div>

        <br />

        @if (Model.Count() > 0)
        {
            <table id="loaiTourTable" class="table table-bordered table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Loại Tour
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var loai in Model)
                    {
                        <tr>
                            <td>@loai.TenLoai</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@loai.MaLoai" class="btn btn-success mx-2 my-2">
                                    <i class="far fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@loai.MaLoai" class="btn btn-danger mx-2 my-2">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Rỗng</p>
        }
    </div>
</div>
