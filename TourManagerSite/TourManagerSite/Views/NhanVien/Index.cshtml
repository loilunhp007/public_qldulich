@model List<TourManager.Models.NhanVien>

@{
    ViewData["Title"] = "Index";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold">NHÂN VIÊN</h6>
    </div>
    <div class="card-body">
        @*<form class="form-inline">
            <div class="form-group mb-2 mx-4">
                <label>Nhân Viên</label>
                <div class="col-3" id="allNv"></div>
            </div>
        </form>*@
        <div class="col-12 text-right">
            <a asp-controller="NhanVien" asp-action="Create" class="btn btn-info">
                <i class="fas fa-plus"></i>
            </a>
        </div>

        <br />

        @if (Model.Count() > 0)
        {
            <table id="nvTable" class="table table-bordered table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Tên Nhân Viên
                        </th>
                        <th>
                            Giới Tính
                        </th>
                        <th>
                            Số Điện Thoại
                        </th>
                        <th>
                            Số Lần Đi Tour
                        </th>                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var nv in Model)
                    {
                        <tr>
                            <td>@nv.TenNv</td>
                            <td>@nv.GioiTinh</td>
                            <td>@nv.Sdt</td>
                            <td>@nv.SoTour</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@nv.MaNv" class="btn btn-success mx-2 my-2">
                                    <i class="far fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@nv.MaNv" class="btn btn-danger mx-2 my-2">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Rỗng</p>
        }
    </div>
</div>
