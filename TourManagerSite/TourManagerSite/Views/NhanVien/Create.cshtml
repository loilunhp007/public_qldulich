@model TourManager.Models.NhanVien

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold">THÊM NHÂN VIÊN</h6>
    </div>
    <div class="card-body">
        <form method="post" asp-action="Create">
            <div class="row">
                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="TenNv">Tên Nhân Viên</label>
                        </div>
                        <div class="col-8">
                            <input required asp-for="TenNv" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Sdt">Số Điện Thoại</label>
                        </div>
                        <div class="col-8">
                            <input required type="tel" pattern="[0-9]{10}" maxlength="10" asp-for="Sdt" class="form-control" />
                        </div>
                    </div>                    
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="GioiTinh">Giới Tính</label>
                        </div>
                        <div class="col-8">
                            <select asp-for="GioiTinh" class="form-control">
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-4 row">
                            <div class="col">
                                <input type="submit" class="btn btn-success w-100" value="Thêm" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-dark w-100"><i class="fas fa-sign-out-alt"></i>Trở lại</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

