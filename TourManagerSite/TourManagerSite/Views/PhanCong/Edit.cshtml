@model TourManager.Models.PhanCong

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold">SỬA CHI TIẾT PHÂN CÔNG</h6>
    </div>
    <div class="card-body">
        <form method="post">
            <input asp-for="MaPhanCong" hidden />

            <div class="row">
                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="MaDoan">Đoàn</label>
                        </div>
                        <div class="col-8">
                            <select asp-for="MaDoan" asp-items="@(new SelectList(ViewBag.LayDoan, "MaDoan", "TenDoan"))" class="form-control">
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="MaNv">Nhân Viên</label>
                        </div>
                        <div class="col-8">
                            <select asp-for="MaNv" asp-items="@(new SelectList(ViewBag.LayNv, "MaNv", "TenNv"))" class="form-control">
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="NhiemVu">Nhiệm Vụ</label>
                        </div>
                        <div class="col-8">
                            <select asp-for="NhiemVu" class="form-control">
                                <option value="Lái xe">Lái xe</option>
                                <option value="Hướng dẫn viên">Hướng dẫn viên</option>
                                <option value="Phục vụ">Phục vụ</option>
                                <option value="Thông dịch viên">Thông dịch viên</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-4 row">
                            <div class="col">
                                <input type="submit" class="btn btn-success w-100" value="Sửa" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-dark w-100"><i class="fas fa-sign-out-alt"></i>Trở lại</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

