@model TourManager.Models.Tour

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold">SỬA TOUR</h6>
    </div>
    <div class="card-body">
        <form method="post">
            <input asp-for="MaTour" hidden />

            <div class="row">
                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="TenTour">Tên Tour</label>
                        </div>
                        <div class="col-8">
                            <input required asp-for="TenTour" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="MaLoai">Loại Tour</label>
                        </div>
                        <div class="col-8">
                            <select asp-for="MaLoai" asp-items="@(new SelectList(ViewBag.LayLoaiTour, "MaLoai", "TenLoai"))" class="form-control">
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="DacDiem">Đặc Điểm</label>
                        </div>
                        <div class="col-8">
                            <input asp-for="DacDiem" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-4 row">
                            <div class="col">
                                <input type="submit" class="btn btn-success w-100" value="Sửa" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-dark w-100"><i class="fas fa-sign-out-alt"></i>Trở lại</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

